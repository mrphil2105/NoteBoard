@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="col-xl-3 col-md-6 col-9 mx-auto">
    <h1>Register</h1>

    <form asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control"/>
            <div class="form-text">Password must be at least 8 characters, and must have at least one lowercase, uppercase or digit.</div>
        </div>

        <div class="mb-3">
            <label asp-for="PasswordConfirmation" class="form-label"></label>
            <input asp-for="PasswordConfirmation" class="form-control"/>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
